{% extends 'base.html.twig' %}

{% block title %}Hello ProductsController!{% endblock %}

{% block body %}
<div class="full-background">

    <main class="container">

        <section class="row">
            <div class="col-12">
                <h1 class="main-title react-root2" style="visibility: hidden;">Liste des produits dans {{ category.name }}</h1>
            </div>
                <div class="card mb-5">
                    <h3 class="card-header"> {{ category.name }}</h3>
                    <div class="card-body">
                    <h5 class="card-title">Découvrez ici toutes nos écharpes de portage</h5>
                    </div>
                    <svg xmlns="#" class="d-block user-select-none" width="100%" height="300" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                    <rect width="100%" height="100%" fill="#868e96"></rect>
                    <image href="{{ asset('img/' ~ category.slug ~ '.webp') }}" x="0" y="-50" width="318" height="250"></image>
                    </svg>
                    <div class="card-body">
                    </div>
                    <ul class="list-group list-group-flush">
                    </ul> 
                        {% for product in products %}
                        <ul class="list-group list-group-flush margin">
                            <li class="list-group-item list-title"> {{ product.name }}</li>
                            <li class="list-group-item"> {{ product.description|raw }}</li>
                             <div class="card-body">
                            <a href="{{ path('products_details', { slug: product.slug }) }}" class="btn btn-primary">
                                Voir le produit
                            </a>
                        </div>
                        </ul>

                        {% endfor %} 
                 
                </div>
        </section>

    </main>
</div>
{% endblock %}

