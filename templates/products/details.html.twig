{% extends 'base.html.twig' %}

{% block title %}Details de {{ product.name }}{% endblock %}

{% block body %}

<div class="full-background">

    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1 class="main-title">Caractéristique de  {{ product.name }}</h1>
            </div>

                <div class="card mb-5">
                    <h3 class="card-header"> {{ product.name }}</h3>
                    <div class="card-body">

                    </div>
                    <svg xmlns="#" class="d-block user-select-none" width="100%" height="300" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">                
                        <image href="{{ asset('img/' ~ product.slug ~ '.webp') }}" x="0" y="-10" width="318" height="250"></image>
                    </svg>
                    <li class="list-group-item list-title last-margin"> {{ product.name }}</li>
                    <li class="list-group-item"> Tous nos produits sont fait dans des matériaux Français et respecte la peau de bébé et celle du porteur ! </li>
                    <hr class="separator">
                    <li class="list-group-item"> En stock : {{ product.stock }}</li>
                    <hr class="separator">
                    <li class="list-group-item"> Prix : {{ (product.price / 100)|number_format(2, ',', '') }} <span>€</span></li>
                    <div class="card-body">
                       <div class="button-group">
                            <a href="https://buy.stripe.com/test_9AQ8yCa4zgzidlC7sx" class="btn btn-primary">
                                Acheter
                            </a>
                            <a href="{{ path('cart_add', {id: product.id}) }}" class="btn btn-primary bis">
                                Ajouter
                            </a>
                        </div>

                    </div>
                </div>

        </section>

    </main>

</div>

{% endblock %}
