{% extends 'base.html.twig' %}

{% block title %}Liste des categories{% endblock %}

{% block body %}

<main class="container">
    <section class="row">
        <div class="col-12">
            <h1 class="main-title">Bievenue sur Douceur de lune la boutique !</h1>
            <p>Voici nos produits</p>
        </div>
            {% for category in categories %}
            <div class="card mb-5">
                {% if category.parent == null %}
                <h3 class="card-header"> {{ category.name }}</h3>
                <div class="card-body">
                <h5 class="card-title">Voici mes articles pour {{category.name}}</h5>
                {# <h6 class="card-subtitle text-muted">Support card subtitle</h6> #}
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="450" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                    <image href="{{ asset('img/' ~ category.slug ~ '.jpg') }}" x="0" y="-20" width="318" height="250"></image>
                </svg>
                <div class="card-body">
                </div>
                {% else %}
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Nos {{ category.name }} !</li>
                    </ul>
                
                <div class="card-body">
                <a href="{{ path('categories_list', { slug: category.slug } ) }}" class="card-link">Voir les produits</a>
                {# <a href="#" class="card-link">Another link</a> #}
                </div>
                {% endif %}
            </div>
            {% endfor %}
    </section>

</main>

{% endblock %}
