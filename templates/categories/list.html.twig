{% extends 'base.html.twig' %}

{% block title %}Liste des {{ category.name }}{% endblock %}

{% block body %}

<main class="container">
    <section class="row">
        <div class="col-12">
            <h1 class="main-title">Liste des produits dans {{ category.name }}</h1>
        </div>
            <div class="card mb-5">
                <h3 class="card-header"> {{ category.name }}</h3>
                <div class="card-body">
                <h5 class="card-title">Découvrez ici toutes nos écharpes de portage</h5>
                </div>
                <svg xmlns="#" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                <rect width="100%" height="100%" fill="#868e96"></rect>
                <image href="{{ asset('img/' ~ category.slug ~ '.jpg') }}" x="0" y="-20" width="318" height="250"></image>
                {# <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text> #}
                </svg>
                <div class="card-body">
                </div>
                <ul class="list-group list-group-flush">
                    {# <li class="list-group-item">{{ category.name }}</li> #}
                </ul> 
                    {% for product in products %}
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item list-title"> {{ product.name }}</li>
                        <li class="list-group-item"> {{ product.description|raw }}</li>
                    </ul>
                    <div class="card-body">
                        <a href="{{ path('products_details', { slug: product.slug }) }}" class="btn btn-primary">
                            Voir le produit
                        </a>
                    </div>

                    {% endfor %} 
                {# <div class="card-body">
                <a href="#" class="card-link">Voir les produits</a>
                </div> #}
            </div>
    </section>

</main>
 
{% endblock %}
